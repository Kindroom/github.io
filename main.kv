<Container>:
#:import get_color_from_hex kivy.utils.get_color_from_hex

#:set text_color get_color_from_hex("#4a4939")
#:set focus_color get_color_from_hex("#e7e4c0")
#:set ripple_color get_color_from_hex("#c5bdd2")
#:set bg_color get_color_from_hex("#f7f4e7")
#:set selected_color get_color_from_hex("#0c6c4d")


    MDBottomNavigation:
        padding: [0,60,0,0]
        panel_color: get_color_from_hex("#eeeaea")
        selected_color_background: get_color_from_hex("#97ecf8")
        text_color_active: 0, 0, 0, 1


        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Робочі місця'
            icon: 'account-multiple'
            # badge_icon: "numeric-10"

            
            ScrollView:

                MDList:
                    id:lists

            # MDLabel:
            #     text: 'Mail'
            #     halign: 'center'

            MDBoxLayout:
                spacing: "56dp"
                adaptive_size: True
                pos_hint: {"center_x": .9, "center_y": .1}
                id: box
                
                #MDFloatingActionButton:
                #    on_press: 'screen 3'
                #    icon:"pencil"

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Основні засоби'
            icon: 'server-network'
            # badge_icon: "numeric-5"

            ScrollView:

                MDList:
                    id:OZLists

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Малоцінка'
            icon: 'script-text-outline'

            # MDLabel:
            #     text: 'LinkedIN'
            #     halign: 'center'



    MDNavigationLayout:
    
        ScreenManager:

            MDScreen:

                MDToolbar:
                    title: "Робочі місця"
                    elevation: 10
                    pos_hint: {"top": 1}
                    md_bg_color: get_color_from_hex("#eeeaea") #focus_color
                    specific_text_color: text_color
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open") if nav_drawer.state == "close" else nav_drawer.set_state("close")]]


        
        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)
            md_bg_color: get_color_from_hex("#eeeaea") #bg_color

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Микола Корнійчук"
                    title_color: text_color
                    text: "nnk@zrres.ztoe.com.ua"
                    title_color: text_color
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Звіт по робочих місцях"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Звіт по кабінетах"

             

    
        



